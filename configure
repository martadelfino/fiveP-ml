#!/bin/sh

#!/bin/sh

# Ensure Rscript is available and BiocManager is installed
# Check and install dependencies

"${R_HOME}/bin/Rscript" -e "if (!requireNamespace('BiocManager', quietly=TRUE)) install.packages('BiocManager')"
"${R_HOME}/bin/Rscript" -e "if (!requireNamespace('tidyverse', quietly=TRUE)) install.packages('tidyverse')"
"${R_HOME}/bin/Rscript" -e "if (!requireNamespace('STRINGdb', quietly=TRUE)) BiocManager::install('STRINGdb')"
"${R_HOME}/bin/Rscript" -e "if (!requireNamespace('biomaRt', quietly=TRUE)) BiocManager::install('biomaRt')"
